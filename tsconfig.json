{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "paths": {
      "@core/*": ["./src/core/*"],
      "@http/*": ["./src/infrastructure/http/*"],
      "@config/*": ["./src/infrastructure/config/*"]
    }
  }
}
